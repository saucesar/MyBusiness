<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/carrinho_background"
    android:padding="@dimen/espaco_views_horizontal">


    <LinearLayout
        android:id="@+id/linearLayoutImageProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/imageViewProdutCarrinho"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="0.73"
            android:src="@drawable/icone_app"
            android:onClick="anterior"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNomeProdutoCarrinho"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Produto"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/color_icone_menu"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/textViewQuantidadeProdutoCarrinho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/formulario_quantidade"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <Space
                    android:layout_width="@dimen/espaco_formulario"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textViewQuantidadeValorProdutoCarrinho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="2"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/button_background"
                android:layout_gravity="center_horizontal|center_vertical" >

                <TextView
                    android:id="@+id/textViewPrecoProdutoCarrinho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="R$"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_preco_carrinho"/>

                <Space
                    android:layout_width="@dimen/espaco_formulario"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textViewPrecoValorProdutoCarrinho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="9.99"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/font_preco_carrinho"/>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>



</LinearLayout>