<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_tela_login_menor"
    android:padding="@dimen/espaco_views_horizontal">

    <Space
        android:layout_width="@dimen/espaco_views_horizontal"
        android:layout_height="@dimen/espaco_views_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Space
        android:layout_width="@dimen/espaco_views_horizontal"
        android:layout_height="@dimen/margem_tela_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_font_formulario">

        <ImageView
            android:id="@+id/imageViewProdutoAdicionado"
            android:layout_width="80dp"
            android:layout_height="80dp"
            
            />
        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewNomeProdutoAdicionado"
            android:textColor="@color/color_menu"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/font_formulario"
            android:textStyle="bold"
            android:gravity="center"
            android:text="nome do produto"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            />

        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewQuantidadeProdutoAdicionado"
            android:textColor="@color/color_menu"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="99"
            android:layout_height="wrap_content"
            />

        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewPrecoVendaProdutoAdicionado"
            android:textColor="@color/color_menu"
            android:layout_width="80dp"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="0.00"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <Space
        android:layout_width="@dimen/espaco_views_horizontal"
        android:layout_height="@dimen/margem_tela_menu" />


</LinearLayout>