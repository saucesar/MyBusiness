<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_tela_login_menor"
    android:padding="@dimen/espaco_views_horizontal">

    <TextView
        android:id="@+id/textViewLayoutProdutoNome"
        android:textColor="@color/color_menu"
        android:layout_width="match_parent"
        android:textSize="@dimen/font_formulario"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/color_icone_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/formulario_quantidade"
            />
        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewLayoutProdutoQuantidade"
            android:textColor="@color/color_menu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            />
        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:textColor="@color/color_icone_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/formulario_data"
            />

        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewLayoutProdutoData"
            android:textColor="@color/color_menu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            />

    </LinearLayout>

    <Space
        android:layout_width="@dimen/espaco_views_horizontal"
        android:layout_height="@dimen/espaco_views_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/color_icone_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/formulario_preco_compra"
            />
        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewLayoutProdutoPrecoCompra"
            android:textColor="@color/color_menu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            />
        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:textColor="@color/color_icone_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/formulario_preco_venda"
            />

        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewLayoutProdutoPrecoVenda"
            android:textColor="@color/color_menu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            />

    </LinearLayout>

    <Space
        android:layout_width="@dimen/espaco_views_horizontal"
        android:layout_height="@dimen/espaco_views_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/color_icone_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/formulario_descricao"
            />
        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewLayoutProdutoDescricao"
            android:textColor="@color/color_menu"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            />


    </LinearLayout>

    <Space
        android:layout_width="@dimen/espaco_views_horizontal"
        android:layout_height="@dimen/margem_tela_menu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewLayoutFotoPrincipal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            
            />
        <Space
            android:layout_width="@dimen/espaco_views_horizontal"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/imageViewLayoutFotoSecundaria"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

    </LinearLayout>

    <Space
        android:layout_width="@dimen/espaco_views_horizontal"
        android:layout_height="@dimen/margem_tela_menu" />


</LinearLayout>