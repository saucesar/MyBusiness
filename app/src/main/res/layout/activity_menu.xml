<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margem_tela_menu"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".activities.ActivityMenu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_menu"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonProduto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/produto_24"
            android:text="@string/produto"
            android:textColor="@color/color_menu"
            android:textStyle="bold"
            android:textSize="40px"
             />


        <Button
            android:id="@+id/buttonCliente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/cliente_24"
            android:text="@string/cliente"
            android:textColor="@color/color_menu"
            android:textStyle="bold"
            android:textSize="40px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_menu"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonVenda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/venda_24"
            android:text="@string/venda"
            android:textSize="40px"
            />


        <Button
            android:id="@+id/buttonAdministrador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/administrador_24"
            android:text="@string/administrador"
            android:textColor="@color/color_menu"
            android:textStyle="bold"
            android:textSize="30px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/color_menu"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonRelatorio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/relatorio_24"
            android:text="@string/relatorio"
            android:textColor="@color/color_menu"
            android:textStyle="bold"
            android:textSize="40px"
            />
    </LinearLayout>




</LinearLayout>